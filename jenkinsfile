pipeline {
       agent {label 'maven'}
       parameters {
           choice(name: 'BRANCH', choices: ['master','branch1sp'], description: 'for selecting branch')
           string(name: 'maven', defaultValue: 'mvn package', description: 'mybuild')
                  }
       triggers {
           pollSCM ('* * * * *')
                }
       stages {
           stage ('clone') {
            steps {
              git url: 'git@github.com:rohi3369/game-of-life.git',
              branch: "${params.BRANCH}"
                }
                           }
           stage ('build') {
            steps {
                   sh 'export PATH="$PATH:/usr/lib/jvm/java-8-openjdk-amd64"'
                    sh "${params.maven}"
               }
            }
       
       stage('archiveArtifacts'){
        steps{
               archiveArtifacts artifacts: '**/target/*.jar'
            }
       }
       stage('archive results') {
            steps {
                junit '**/surefire-reports/*.xml'
            }
        }
    }
}
